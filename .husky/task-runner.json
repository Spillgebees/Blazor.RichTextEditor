{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "csharpier-format",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [
        "csharpier",
        "format",
        "${staged}"
      ],
      "include": [
        "**/*.cs",
        "**/*.csx",
        "**/*.config",
        "**/*.csproj",
        "**/*.props",
        "**/*.slnx",
        "**/*.targets",
        "**/*.xaml",
        "**/*.xml"
      ]
    }
  ]
}
