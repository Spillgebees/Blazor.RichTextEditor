<div>
    <h3 class="text-justify">
        Using <code class="hljs">PassiveRichTextEditor</code>, a variant that receives no event callbacks from Quill.
        Useful if you intend to have a lot of content or large embedded images in your editor as the standard editor
        would lag in this case. The component has <code class="hljs">Get</code> and <code class="hljs">Set</code>
        methods that allow you to do the same thing as the other component does
    </h3>
    <CodeSnippet Code="@Code">
        <Component>
            <CodeSnippet Code="@_content"
                         CodeFormat="CodeFormat.Html"
                         Summary="Show HTML">
                <Component>
                    <PassiveRichTextEditor @bind-Content="@_content"
                                           ToolbarOptions="ToolbarOptions.FullToolbarOptions"
                                           @ref="@_editorReference" />
                    <button class="cursor-pointer w-full flex justify-center items-center hover:bg-zinc-200 border-2 border-dashed border-stone-500 p-4 mt-2 gap-4"
                            @onclick="@(() => _editorReference?.UpdateContentAsync() ?? Task.CompletedTask)">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             height="24"
                             viewBox="0 0 24 24"
                             width="24">
                            <path d="M0 0h24v24H0z"
                                  fill="none" />
                            <path d="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" />
                        </svg>

                        Update content (will update the HTML below)
                    </button>
                </Component>
            </CodeSnippet>
        </Component>
    </CodeSnippet>
</div>

@code {
    private const string Code =
@"<PassiveRichTextEditor @bind-Content=""@_content""
                       ToolbarOptions=""ToolbarOptions.FullToolbarOptions""
                       @ref=""@_editorReference"" />
<button @onclick=""@(() => _editorReference?.UpdateContentAsync() ?? Task.CompletedTask)"">
    Update content
</button>";

    private string _content = "<b>Hello! \ud83d\udc4b</b>";

    private PassiveRichTextEditor? _editorReference;
}
